<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="200dp" />
            <stroke android:width="1dip" android:color="@color/green_blue_crayola" />
            <gradient android:angle="-90" android:startColor="@color/green_blue_crayola" android:endColor="@color/green_blue_crayola"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="200dp" />
            <stroke android:width="1dip" android:color="@color/green_blue_crayola" />
            <solid android:color="@color/green_blue_crayola"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="200dp" />
            <stroke android:width="1dip" android:color="@color/chocolate_web" />
            <gradient android:angle="-90" android:startColor="@color/chocolate_web" android:endColor="@color/atomic_tangerine" />
        </shape>
    </item>
</selector>